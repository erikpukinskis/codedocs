{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "My TypeScript Watch",
      "type": "shell",
      "command": "yarn watch:types",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "ESLint Watch",
      "type": "shell",
      "command": "yarn watch:lint",
      "problemMatcher": "$eslint-compact",
      "group": "build",
      "presentation": {
        "reveal": "never",
        "panel": "dedicated",
        "clear": true
      }
    }
  ]
}
