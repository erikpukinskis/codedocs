{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["lib/*"],
      "*": ["lib/*"]
    },
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "outDir": "dist"
  },
  "include": ["lib", "docs", "macro"]
}
